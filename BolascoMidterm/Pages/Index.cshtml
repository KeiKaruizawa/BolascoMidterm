@page
@model BolascoMidterm.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Success Message Box (shows when ?success=true is in URL) -->
@if (HttpContext.Request.Query["success"] == "true")
{
    <div class="alert alert-success alert-dismissible fade show success-message-box" role="alert">
        <span class="material-icons success-icon">check_circle</span>
        <span>Welcome back! You have successfully logged in.</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Main Content -->
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Add this script for auto-close -->
@section Scripts {
    <script>
        // Auto-close success message after 5 seconds
        setTimeout(function() {
            var alert = document.querySelector('.success-message-box');
            if (alert) {
                bootstrap.Alert.getOrCreateInstance(alert).close();
            }
        }, 5000);
    </script>
}
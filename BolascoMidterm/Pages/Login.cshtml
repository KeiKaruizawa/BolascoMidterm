@page
@model BolascoMidterm.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/site.css" />
</head>
<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <!-- LEFT IMAGE PANEL -->
            <div class="col-md-6 d-none d-md-block login-bg"></div>

            <!-- RIGHT LOGIN PANEL -->
            <div class="col-md-6 login-panel position-relative d-flex align-items-center justify-content-center">
                <!-- Floating Bubbles -->
                <div class="right-bubbles">
                    <span></span><span></span><span></span><span></span>
                    <span></span><span></span><span></span><span></span>
                    <span></span><span></span><span></span><span></span>
                </div>

                <!-- Back Button -->
                <a asp-page="/Index" class="back-btn-top">
                    ← Back to Home
                </a>

                <!-- Login Form -->
                <div class="login-box w-75">
                    <h2>Welcome Back!</h2>
                    <p>Sign in to continue to your account</p>

                    <form>
                        <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <input type="email" class="form-control" placeholder="your@email.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" placeholder="Enter your password" required />
                        </div>

                        <div class="mb-4 text-end">
                            <a href="#" class="forgot-link">Forgot your password?</a>
                        </div>

                        <button type="submit" class="btn btn-login w-100">
                            Sign In
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@page
@model BolascoMidterm.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="container-fluid vh-100 p-0">
        <div class="row h-100 g-0">
            <!-- LEFT IMAGE PANEL -->
            <div class="col-md-6 d-none d-md-block login-bg"></div>

            <!-- RIGHT LOGIN PANEL -->
            <div class="col-md-6 login-panel position-relative d-flex align-items-center justify-content-center">
                <div class="diagonal-edge"></div>

                <!-- Floating Bubbles -->
                <div class="right-bubbles">
                    <span></span><span></span><span></span><span></span>
                    <span></span><span></span><span></span><span></span>
                    <span></span><span></span><span></span><span></span>
                </div>

                <!-- Back Button -->
                <a asp-page="/Index" class="back-btn-top">← Back to Home</a>

                <!-- Login Form -->
                <div class="login-box w-75">
                    <h2>Welcome Back!</h2>
                    <p>Sign in to continue to your account</p>

                    <form method="post">
                        <div class="mb-3">
                            <label for="Username" class="form-label">Email Address</label>
                            <input type="email"
                                   asp-for="Username"
                                   class="form-control"
                                   placeholder="your@email.com"
                                   autocomplete="email"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <div class="password-wrapper">
                                <input type="password"
                                       asp-for="Password"
                                       class="form-control"
                                       placeholder="Enter your password"
                                       autocomplete="current-password"
                                       required />
                                <span class="material-icons password-toggle" onclick="togglePasswordVisibility()">visibility_off</span>
                            </div>
                        </div>

                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label remember-label" for="rememberMe">
                                    Remember me
                                </label>
                            </div>
                            <a href="#" class="forgot-link">Forgot your password?</a>
                        </div>

                        <!-- Error Message -->
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="error-message mb-3" role="alert">
                                <span class="material-icons error-icon">error_outline</span>
                                @Model.ErrorMessage
                            </div>
                        }

                        <button type="submit" class="btn btn-login w-100">
                            Log In
                        </button>

                        <!-- THIS IS THE REGISTER LINK - ADD THIS SECTION -->
                        <div class="text-center mt-4">
                            <p class="register-text">
                                Don't have an account yet?
                                <a asp-page="/Register" class="register-link">Register</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('Password');
            const toggleIcon = document.querySelector('.password-toggle');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.textContent = 'visibility';
            } else {
                passwordInput.type = 'password';
                toggleIcon.textContent = 'visibility_off';
            }
        }
    </script>
</body>
</html>
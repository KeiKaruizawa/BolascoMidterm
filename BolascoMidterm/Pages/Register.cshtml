@page
@model BolascoMidterm.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="container-fluid vh-100 p-0">
        <div class="row h-100 g-0">
            <!-- LEFT IMAGE PANEL -->
            <div class="col-md-6 d-none d-md-block login-bg"></div>

            <!-- RIGHT REGISTER PANEL -->
            <div class="col-md-6 login-panel position-relative d-flex align-items-center justify-content-center">
                <div class="diagonal-edge"></div>

                <!-- Floating Bubbles -->
                <div class="right-bubbles">
                    <span></span><span></span><span></span><span></span>
                    <span></span><span></span><span></span><span></span>
                    <span></span><span></span><span></span><span></span>
                </div>

                <!-- Back Button -->
                <a asp-page="/Index" class="back-btn-top">← Back to Home</a>

                <!-- Register Form -->
                <div class="login-box w-75">
                    <h2>Create Account</h2>
                    <p>Sign up to get started</p>

                    <form method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email Address</label>
                            <input type="email"
                                   asp-for="Email"
                                   class="form-control"
                                   placeholder="your@email.com"
                                   autocomplete="email"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <div class="password-wrapper">
                                <input type="password"
                                       asp-for="Password"
                                       class="form-control"
                                       id="Password"
                                       placeholder="Create a password"
                                       autocomplete="new-password"
                                       required />
                                <span class="material-icons password-toggle" onclick="togglePasswordVisibility('Password', this)">visibility_off</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <div class="password-wrapper">
                                <input type="password"
                                       asp-for="ConfirmPassword"
                                       class="form-control"
                                       id="ConfirmPassword"
                                       placeholder="Re-enter your password"
                                       autocomplete="new-password"
                                       required />
                                <span class="material-icons password-toggle" onclick="togglePasswordVisibility('ConfirmPassword', this)">visibility_off</span>
                            </div>
                        </div>

                        <!-- Error Message -->
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="error-message mb-3" role="alert">
                                <span class="material-icons error-icon">error_outline</span>
                                @Model.ErrorMessage
                            </div>
                        }

                        <!-- Success Message -->
                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div class="success-message mb-3" role="alert">
                                <span class="material-icons success-icon">check_circle</span>
                                @Model.SuccessMessage
                            </div>
                        }

                        <button type="submit" class="btn btn-login w-100">
                            Create Account
                        </button>

                        <!-- Login Link -->
                        <div class="text-center mt-4">
                            <p class="register-text">
                                Already have an account?
                                <a asp-page="/Login" class="register-link">Log In</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility(inputId, icon) {
            const passwordInput = document.getElementById(inputId);

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.textContent = 'visibility';
            } else {
                passwordInput.type = 'password';
                icon.textContent = 'visibility_off';
            }
        }
    </script>
</body>
</html>